<div id='search-form' data-controller='search'>
  <%= form_with url: articles_path, data: { 'remote': true, 'search-target': 'form', 'turbo-frame': 'articles' } do |form| %>
    <%= form.search_field :query, id: :query, data: { 'action': 'keyup->search#search' } %>
  <% end %>
</div>

<%= turbo_frame_tag("articles") do %>
  <div id="articles">
    <%= render @articles %>
  </div>
<% end %>
